{
  "name": "perfsee",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "packages/plugins/*",
    "packages/runner/*"
  ],
  "devDependencies": {
    "@abraham/reflection": "^0.10.0",
    "@commitlint/config-conventional": "^17.0.3",
