{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    ":preserveSemverRanges",
    ":disablePeerDependencies"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "typescript",
        "ts-node"
      ],
      "addLabels": [
        "ts",
        "types"
      ],
      "groupName": "typescript"
    },
    {
      "matchPackageNames": [
        "@napi/helper",
        "napi",
        "napi-build",
        "napi-derive"
      ],
      "addLabels": [
        "napi-rs"
      ],
      "groupName": "napi-rs"
    },
    {
      "matchPackageNames": [
        "node-fetch",
        "chalk",
        "file-type",
        "path-to-regexp",
        "react-router",
        "react-router-dom",
        "@types/react-router",
        "@types/react-router-dom"
      ],
      "extends": [
        ":disableMajorUpdates"
      ]
    },
    {
      "matchPackagePatterns": [
        "^@?rollup"
      ],
      "groupName": "rollup"
    },
    {
      "matchPackagePatterns": [
        "^eslint",
        "^@typescript-eslint"
      ],
      "groupName": "linter"
    },
    {
      "matchCurrentVersion": "/^0\\./",
      "major": true
    }
  ],
  "commitMessagePrefix": "chore: ",
  "commitMessageAction": "bump up",
  "commitMessageTopic": "{{depName}} version",
  "ignoreDeps": [
    "@types/webpack",
    "@types/vscode",
    "node",
    "@types/node",
    "@types/node-fetch",
    "@mdx-js/react",
    "env-ci",
    "@types/env-ci"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "examples/**"
  ]
}
